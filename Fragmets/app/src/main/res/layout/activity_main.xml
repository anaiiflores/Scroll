<?xml version="1.0" encoding="utf-8"?><!-- activity_main.xml -->
<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Contenedor para los fragments -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Este contenedor quedará vacío ya que los fragments se agregarán dinámicamente -->

        <Button
            android:id="@+id/btnSwitchFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Cambiar Fragment" />
    </FrameLayout>

    <!-- Botón para cambiar entre fragments -->
</RelativeLayout>

